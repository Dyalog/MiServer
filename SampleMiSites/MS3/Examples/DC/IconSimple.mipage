      p←Add _.p
      p.Add _.Icon'md-fingerprint'
      p.Add'Google Material Design'
      
      p←Add _.p
      p.Add _.Icon'e-delete-column_01'
      p.Add'Syncfusion'
      
      p←Add _.p
      '.fa-spin'p.Add _.Icon'md-track_changes'
      p.Add'FontAwesome effects'
      
      p←Add _.p
      '.red'p.Add _.Icon'e-stop'
      p.Add 'custom styling'

      p←Add _.p
      p.Add _.Icon'fa-square' 'fa-terminal fa-inverse' 
      p.Add 'small on large'

      p←Add _.p
      p.Add _.Icon'fa-camera' 'fa-ban red' 1
      p.Add 'large on small'
    ∇

:EndClass
